---
import Base from "@/layouts/Base.astro";
import { getCollection } from "astro:content";

const privacyPolicy = (await getCollection("privacyPolicyPage"))[0];
---

<Base title={`${privacyPolicy.data.title} - Resta`} description={privacyPolicy.data.description}>
    <main class="mx-auto mt-32 max-w-5xl space-y-6 px-6">
        <h1 class="text-center text-4xl">{privacyPolicy.data.title}</h1>
        <div
            set:html={privacyPolicy.rendered?.html}
            class="prose dark:prose-invert prose-a:text-yellow-500 prose-a:duration-300 prose-a:hover:text-yellow-600 prose-p:text-justify prose-headings:underline max-w-none"
        />
        <p class="text-sm text-neutral-300 italic">
            Date of last update: <strong>{new Date(privacyPolicy.data.last_updated).toLocaleDateString()}</strong>
        </p>
    </main>
</Base>
